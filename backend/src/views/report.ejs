<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />

        <title>SB Admin 2 - Tables</title>

        <!-- Custom fonts for this template -->

        <link href="fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css" />
        <link
            href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
            rel="stylesheet"
        />

        <!-- Custom styles for this template -->
        <link href="css/sb-admin-2.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="css/table.css" />
        <link rel="stylesheet" href="css/report.css" />

        <!-- Custom styles for this page -->
        <link href="datatables/dataTables.bootstrap4.min.css" rel="stylesheet" />
    </head>

    <body id="page-top">
        <!-- Page Wrapper -->
        <div id="wrapper">
            <!-- Sidebar -->
            <%- include(sidebar) %>
            <!-- End of Sidebar -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">
                <!-- Main Content -->

                <div id="content">
                    <!-- Topbar -->
                    <%- include(header) %>
                    <!-- End of Topbar -->

                    <!-- Begin Page Content -->
                    <div class="container-fluid">
                        <!-- Page Heading -->
                        <!-- <h1 class="h3 mb-2 text-gray-800">Tables</h1> -->

                        <!-- DataTales Example -->
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">User Details</h6>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover table-striped border-primary">
                                        <thead class="table-dark">
                                            <tr>
                                                <th scope="col" style="width: 5%">#</th>
                                                <th scope="col" style="width: 50%">Message</th>
                                                <th scope="col" style="width: 15%">Date</th>
                                                <th scope="col" style="width: 15%">Type Report</th>
                                                <th scope="col" style="width: 15%">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for (let i = 0; i < reports.user.length; i++) { %>
                                            <tr>
                                                <th scope="row"><%= i+1 %></th>
                                                <td class="username">
                                                    <% if (JSON.parse(reports.user[i].content).img)
                                                    { %>
                                                    <img
                                                    class="img_mess"
                                                        data-toggle="modal"
                                                        data-target="#exampleModal"
                                                        src="<%=  JSON.parse(reports.user[i].content).img  %>"
                                                        alt=""
                                                    />
                                                    <%}%>
                                                    <span>
                                                        <%=
                                                        JSON.parse(reports.user[i].content).content
                                                        %></span
                                                    >
                                                   
                                                </td>
                                                <td>
                                                    <% if (reports.user[i].create_at) { %> <% let
                                                    date = new Date(reports.user[i].create_at); %>
                                                    <%= date.getDate().toString().padStart(2, '0')
                                                    %>/<%= (date.getMonth() +
                                                    1).toString().padStart(2, '0') %>/<%=
                                                    date.getFullYear() %> <% } else { %> -- <% } %>
                                                </td>

                                                <td><%= reports.user[i].type %></td>
                                                <td class="action">
                                                    <% if (reports.user[i].status ==0) {%>
                                                    <button
                                                        class="BanUserButton"
                                                        id="<%= reports.user[i].id %>"
                                                    >
                                                        <i class="fas fa-times-circle"></i>
                                                    </button>
                                                    <% } else {%>
                                                    <button
                                                        class="UnBanUserButton"
                                                        id="<%= reports.user[i].id %>"
                                                    >
                                                        <i
                                                            class="fa fa-unlock"
                                                            aria-hidden="true"
                                                        ></i>
                                                    </button>

                                                    <% } %>
                                                </td>
                                            </tr>
                                            <% }; %>
                                        </tbody>
                                    </table>
                                    <nav aria-label="Page navigation example">
                                        <ul class="pagination" id="pagination">
                                            <!-- Hiển thị pagination ở đây -->
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.container-fluid -->
                </div>
                <!-- End of Main Content -->
                <!-- Modal -->
                <div
                    class="modal fade"
                    id="exampleModal"
                    tabindex="-1"
                    aria-labelledby="exampleModalLabel"
                    aria-hidden="true"
                >
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-body">
                                <div class="img-magnifier-container">
                                    <img
                                        id="myimage"
                                        src="https://www.w3schools.com/howto/img_girl.jpg"
                                        alt="Girl"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Footer -->
                <footer class="sticky-footer bg-white">
                    <div class="container my-auto">
                        <div class="copyright text-center my-auto">
                            <span>Copyright &copy; Your Website 2020</span>
                        </div>
                    </div>
                </footer>
                <!-- End of Footer -->
            </div>
            <!-- End of Content Wrapper -->
        </div>
        <!-- End of Page Wrapper -->

        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>

        <div
            aria-live="polite"
            aria-atomic="true"
            style="position: fixed; z-index: 1050; right: 20px; top: 20px"
        >
            <div
                id="liveToast"
                class="toast"
                role="alert"
                aria-live="assertive"
                aria-atomic="true"
                data-delay="3000"
            >
                <div class="toast-header">
                    <img
                        src="https://phongvu.vn/cong-nghe/wp-content/uploads/2024/09/Meme-meo-bieu-cam-3-1024x1024.jpg"
                        style="width: 30px"
                        class="rounded mr-2"
                        alt="..."
                    />
                    <strong class="mr-auto">Notify</strong>
                    <button
                        type="button"
                        class="ml-2 mb-1 close"
                        data-dismiss="toast"
                        aria-label="Close"
                    >
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="toast-body" style="min-width: 210px">Update success !</div>
            </div>
        </div>
        <!-- Bootstrap core JavaScript-->
        <script src="jquery/jquery.min.js"></script>
        <script src="bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="js/sb-admin-2.min.js"></script>

        <!-- Page level plugins -->
        <script src="datatables/jquery.dataTables.min.js"></script>
        <script src="datatables/dataTables.bootstrap4.min.js"></script>

        <!-- Page level custom scripts -->
        <script>
             let totalPages = <%-JSON.stringify(reports.totalPages) %>;
            console.log(totalPages);
        </script>
        <script src="js/report.js"></script>
        <script>
            $(document).ready(function () {
                $('[data-toggle="tooltip"]').tooltip();
            });
        </script>
    </body>
</html>
